<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="company.profile.app.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="company.profile.app.android.CompanyProfileApp"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_company_app"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="company.profile.app.android.Portfolio"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="company.profile.app.android.Product"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="company.profile.app.android.Service"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="company.profile.app.android.About"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="company.profile.app.android.Contact"
            android:theme="@android:style/Theme.NoTitleBar" />
    </application>

</manifest>